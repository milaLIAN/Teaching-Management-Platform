<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.GradeMapper">

    <sql id="Base_Column_List">
        id,name
    </sql>

    <select id="selectAll" resultType="com.example.entity.Grade">
        select
        <include refid="Base_Column_List" />
        from grade
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="name != null"> and name= #{name}</if>

        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Grade">
        select
        <include refid="Base_Column_List" />
        from grade
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from grade
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Grade" useGeneratedKeys="true">
        insert into grade
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="name != null">title,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="name != null">#{name},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Grade">
        update grade
        <set>
            <if test="name != null">
                name = #{name},
            </if>

        </set>
        where id = #{id} 
    </update>

</mapper>