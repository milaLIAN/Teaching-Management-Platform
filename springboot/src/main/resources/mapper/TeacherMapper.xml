<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TeacherMapper">

    <sql id="Base_Column_List">
        id,username,password,name,phone,email,avatar,role,title
    </sql>

    <select id="selectAll" resultType="com.example.entity.Teacher">
        select
        <include refid="Base_Column_List" />  <!--这个就是上面定义过的 表中的所有字段--> <!--也可以改成 teacher.*-->
        from teacher
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="username != null"> and username like concat('%', #{username}, '%')</if>
            <if test="password != null"> and password= #{password}</if>
            <if test="name != null"> and name= #{name}</if>
            <if test="phone != null"> and phone= #{phone}</if>
            <if test="email != null"> and email= #{email}</if>
            <if test="avatar != null"> and avatar= #{avatar}</if>
            <if test="role != null"> and role= #{role}</if>

        </where>
    </select>

    <select id="selectById" resultType="com.example.entity.Teacher">
        select
        <include refid="Base_Column_List" />
        from teacher
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from teacher
        where  id = #{id}
    </delete>
    <!--动态Sql理解-->
<!-- insert into Teacher prefix（就是左括号） 下面的一串（就是要插入的属性名）suffix（就是右括号）values( 同理，要插入的属性值 ) 这就是要执行的插入的sql语句，属性和属性值顺序要一一对应-->
    <insert id="insert" parameterType="com.example.entity.Teacher" useGeneratedKeys="true">
        insert into teacher
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>                    <!--当值不为空时才传进去-->
                <if test="username != null">username,</if>
                <if test="password != null">password,</if>
                <if test="name != null">name,</if>
                <if test="phone != null">phone,</if>
                <if test="email != null">email,</if>
                <if test="avatar != null">avatar,</if>
                <if test="role != null">role,</if>
                <if test="title != null">title,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="username != null">#{username},</if>
                <if test="password != null">#{password},</if>
                <if test="name != null">#{name},</if>
                <if test="phone != null">#{phone},</if>
                <if test="email != null">#{email},</if>
                <if test="avatar != null">#{avatar},</if>
                <if test="role != null">#{role},</if>
                <if test="title != null">#{title},</if>
        </trim>
    </insert>
<!--update teacher set 某个属性（当属性不为空时）= #{属性}（属性值）where id = #{id} -->
    <!--可知参数值的表示为 #{参数名} -->
    <update id="updateById" parameterType="com.example.entity.Teacher">
        update Teacher
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="title != null">
                title = #{title},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>